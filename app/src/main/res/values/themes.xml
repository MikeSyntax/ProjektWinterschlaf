<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ModulabschlussAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--<item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_dark_green</item>
        <item name="colorSecondary">@color/primary_light_green</item>
    </style>
    <style name="Theme.ModulabschlussAndroid" parent="Base.Theme.ModulabschlussAndroid" />
    <style name="textMiddle">
       <item name="android:textColor">@color/primary_dark_green</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="textSmall">
        <item name="android:textColor">@color/primary_dark_green</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="textSuperSmall">
        <item name="android:textColor">@color/primary_dark_green</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="stroke">
        <item name="strokeWidth">10dp</item>
        <item name="strokeColor">@color/primary_dark_green</item>
    </style>


    <style name="screenBackground">
        <item name="background">@color/primary_light_green</item>
    </style>


    <style name="shadow_light_green">
        <item name="cornerRadius">100dp</item>
        <item name="strokeColor">@color/primary_light_green</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/list_item_sleep</item>
    </style>

    <style name="list_item_sleep">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="strokeColor">@color/primary_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">8dp</item>
        <item name="backgroundTint">@color/primary_light_green</item>
    </style>



</resources>